<%- include("../includes/head.ejs")%>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include("../includes/navigation.ejs")%>
    <main>
        <% if (errorMessage.length > 0) { %>
        <div class="user-message user-message--error"><i class="fas fa-exclamation-circle"></i> <%= errorMessage %>
        </div>
        <% } %>
        <form class="login-form" action="/login" method="POST" autocomplete="off">
            <h1 class="form__title">LOG IN</h1>
            <div class="form-control">
                <label for="email">Email</label>
                <input value="<%= oldInput.email %>"
                    class="<%= validationErrors.find(e=>e.param==="email") ? "invalid" : "" %>" type="email"
                    name="email" id="email">

            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input value="<%= oldInput.password %>"
                    class="<%= validationErrors.find(e=>e.param==="password") ? "invalid" : "" %>" type="password"
                    name="password" id="password">
            </div>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
    </main>
    <%- include("../includes/end.ejs")%>